<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_chem_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.xterstar.www.placeholder.SubjectActivities.chemClass">

    <TextView
        android:text="Chemistry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8"
        android:textSize="35sp"
        tools:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/button27"
        android:layout_alignLeft="@+id/button27"
        android:layout_alignStart="@+id/button27"
        android:layout_marginTop="25dp"
        android:id="@+id/art7d"
        android:text="Chem 6a" />

    <Button
        android:text="MCDB 1a"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/arthi1"
        android:layout_alignLeft="@+id/art7c"
        android:layout_alignStart="@+id/art7c"
        android:id="@+id/arthi6b" />

    <TextView
        android:text="More to be added soon..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        tools:textSize="45sp" />

    <Button
        android:text="chem 1b"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/art1a"
        android:layout_alignBaseline="@+id/button27"
        android:layout_alignBottom="@+id/button27"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Chem 1c"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/art7c"
        android:layout_alignBaseline="@+id/art1a"
        android:layout_alignBottom="@+id/art1a"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Chem 1a"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:id="@+id/button27"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Chem 6b"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/arthi1"
        android:layout_alignBaseline="@+id/art7d"
        android:layout_alignBottom="@+id/art7d"
        android:layout_alignLeft="@+id/art1a"
        android:layout_alignStart="@+id/art1a" />

</RelativeLayout>
