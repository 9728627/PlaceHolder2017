<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_poli_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.xterstar.www.placeholder.SubjectActivities.poliClass">

    <TextView
        android:text="Poly Sci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView6"
        tools:textSize="36sp"
        tools:textStyle="bold" />

    <Button
        android:text="Poly S 6"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/math3Abutton"
        android:layout_centerHorizontal="true"
        android:id="@+id/math3Bbutton" />

    <Button
        android:text="Poly S 15"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/math3Abutton"
        android:layout_alignLeft="@+id/math3Abutton"
        android:layout_alignStart="@+id/math3Abutton"
        android:layout_marginTop="26dp"
        android:id="@+id/math4Bbutton" />

    <TextView
        android:text="More to be added soon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/math4Bbutton"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/math4Abutton"
        android:text="Poly S 12"
        android:layout_alignBaseline="@+id/math3Bbutton"
        android:layout_alignBottom="@+id/math3Bbutton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Poly S 1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="22dp"
        android:id="@+id/math3Abutton"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
