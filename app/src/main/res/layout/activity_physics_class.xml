<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_physics_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.xterstar.www.placeholder.SubjectActivities.physicsClass">

    <TextView
        android:text="Physics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView10"
        tools:textSize="36sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Physics 3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/mus11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/mus15" />

    <Button
        android:text="Physics 4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/mus1"
        android:layout_alignRight="@+id/mus1"
        android:layout_alignEnd="@+id/mus1"
        android:layout_marginTop="26dp"
        android:id="@+id/mus17" />

    <TextView
        android:text="More to be added soon..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView11"
        tools:textSize="50sp" />

    <Button
        android:text="Physics 6b"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button38"
        android:layout_alignBaseline="@+id/button37"
        android:layout_alignBottom="@+id/button37"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Physics 1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="26dp"
        android:id="@+id/mus1"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Physics 2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/mus11"
        android:layout_alignBottom="@+id/mus1"
        android:layout_alignLeft="@+id/button37"
        android:layout_alignStart="@+id/button37"
        android:layout_alignTop="@+id/mus1" />

    <Button
        android:text="Physics 6a"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/button37"
        android:layout_alignTop="@+id/mus17"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
