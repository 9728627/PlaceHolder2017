<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_art_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gradient_background"
    tools:context="com.xterstar.www.placeholder.SubjectActivities.artClass">



    <Button
        android:text="Mus 1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/arthi6b"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/mus1" />

    <TextView
        android:text="More to be added soon..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mus15"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/textView13"
        android:textSize="20sp" />

    <Button
        android:text="Arthi 1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/arthi1"
        android:layout_below="@+id/art1a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Arthi 6b"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/arthi6b"
        android:layout_alignBaseline="@+id/arthi1"
        android:layout_alignBottom="@+id/arthi1"
        android:layout_alignLeft="@+id/art7c"
        android:layout_alignStart="@+id/art7c" />

    <Button
        android:text="Art 7c"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/art7c"
        android:layout_above="@+id/arthi1"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Art 7d"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/art7d"
        android:layout_alignBaseline="@+id/art7c"
        android:layout_alignBottom="@+id/art7c"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Art 1a"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/art1a"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Mus 17"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/mus17"
        android:layout_below="@+id/mus1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp" />

    <Button
        android:text="Mus 11"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/mus11"
        android:layout_above="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Mus 15"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/mus15"
        android:layout_alignBaseline="@+id/mus17"
        android:layout_alignBottom="@+id/mus17"
        android:layout_alignLeft="@+id/arthi6b"
        android:layout_alignStart="@+id/arthi6b" />

    <TextView
        android:text="Art/Music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="30sp"
        tools:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
